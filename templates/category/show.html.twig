{% extends 'base.html.twig' %}

{% block title %}{% trans %}Category{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Category{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Shortname{% endtrans %}</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Longname{% endtrans %}</th>
                <td>{{ category.longname }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('category_index') }}"><i class="fas fa-arrow-circle-left"></i>&nbsp;{% trans %}back to list{% endtrans %}</a>

    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-pencil-alt"></i>&nbsp;{% trans %}edit{% endtrans %}</a>
    <br><br>
    {{ include('category/_delete_form.html.twig') }}
    
{% endblock %}
